{
  "name": "@ai/root",
  "workspaces": [
    "api",
    "database"
  ],
  "repository": {
    "type": "git",
    "repository": "https://github.com/ZibanPirate/automatic-invention.git"
  },
  "author": {
    "email": "zakman.dev@gmail.com",
    "name": "Zakaria Mansouri"
  },
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "lint:check": "concurrently \"cd api && yarn lint:check\"",
    "lint:fix": "concurrently \"cd api && yarn lint:fix\"",
    "dev": "yarn && concurrently \"cd api && yarn build:watch\" \"cd api && yarn dev\" \"cd database && yarn build:watch\"",
    "test": "concurrently \"cd api && yarn test\"",
    "test:cov": "concurrently \"cd api && yarn test:cov\"",
    "db:up":"cd api && yarn db:up && cd ..",
    "db:down":"cd api && yarn db:down && cd ..",
    "postinstall": "(husky install && husky set .husky/pre-commit \"cd api && yarn lint-staged && cd ../database && yarn lint-staged\") || exit 0"
  },
  "devDependencies": {
    "concurrently": "^6.0.2",
    "husky": "^6.0.0"
  }
}
